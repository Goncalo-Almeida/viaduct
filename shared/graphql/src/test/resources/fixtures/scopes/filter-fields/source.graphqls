extend type Query @scope(to: ["*"]) {
  aType: AType
  bType: BType
}

type AType @scope(to: ["test-scope:public", "test-scope:data", "test-scope:private", "some-other-scope"]) {
  foo: String
  someOtherTypeField: SomeOtherType
}

"""
this type will be completely filtered out for all scopes except "some-other-scope"
"""
type BType @scope(to: ["test-scope:public", "test-scope:data", "test-scope:private", "some-other-scope"]) {
  someOtherTypeField: SomeOtherType
}

type SomeOtherType @scope(to: ["some-other-scope"]) {
  bar: String
}

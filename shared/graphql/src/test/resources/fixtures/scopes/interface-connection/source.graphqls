extend type Query @scope(to: ["*"]) {
  node: Node
  foo: Foo
}

type Foo @scope(to: ["*"]) {
  foo: String
}

extend type Foo @scope(to: ["test-scope:private"]) {
  placeListingPresentation: PlaceListingPresentationContainer
}

interface Node @scope(to: ["test-scope:public", "test-scope:data", "test-scope:private"]) {
  id: ID!
}

type PlaceListing implements Node @scope(to: ["test-scope:data", "test-scope:private"]) {
  id: ID!
  presentation: PlaceListingPresentationContainer
}

type PlaceListingPresentationContainer @scope(to: ["test-scope:public", "test-scope:data"]) {
  foo: String
  query: Query
}

extend type PlaceListingPresentationContainer @scope(to: ["test-scope:data"]) {
  data: PlaceListing
}

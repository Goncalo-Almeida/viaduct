enum SimpleEnum @scope(to: ["test-scope"]) {
  Foo
}

directive @directiveWithEnum(x: SimpleEnum) on FIELD_DEFINITION

input SimpleInput @scope(to: ["test-scope"]) {
  foo: String
}

directive @directiveWithInput(x: SimpleInput) on FIELD_DEFINITION

scalar SimpleScalar

directive @directiveWithScalar(x: SimpleScalar) on FIELD_DEFINITION

extend type Query @scope(to: ["*"]) {
  a: Int @directiveWithEnum(x: Foo)
  b: Int @directiveWithInput(x: { foo: "foo" })
  c: Int @directiveWithScalar(x: 0)
}
